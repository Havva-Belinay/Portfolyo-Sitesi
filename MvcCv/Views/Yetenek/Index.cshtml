@using MvcCv.Models.Entity
@model List<TblYeteneklerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@{ string renk = "";}
<!-- buranın böyle kullanılmasının nedeni oranların yazılı olduğu
    küçük kısmı renklendirmek için ama ben zaten derece ile aynı renkte olmasını istediğim
    için renk değişkenini kullandım, buna gerek kalmadı @{ string labelrenk = "";} -->

<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <h3 class="card-title">Yetenek Listem</h3>
                            </div>
                            <!-- /.card-header -->
                            <div class="card-body">
                                <div class="card-body">
                                    <a href="/Yetenek/YeniYetenek/" class="btn btn-info">Yeni Yetenek Ekle</a>
                                    <br />
                                    <br />
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="width: 10px">#</th>
                                                <th>Yetenek</th>
                                                <th>Derece</th>
                                                <th style="width: 40px">Oran</th>
                                                <th>Düzenle</th>
                                                <th>Sil</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var x in Model)
                                            {
                                                if (x.Oran >= 0 && x.Oran <= 50)
                                                {
                                                    renk = "progress-bar progress-bar-danger";
                                                }
                                                if (x.Oran >= 51 && x.Oran <= 70)
                                                {
                                                    renk = "progress-bar bg-warning";
                                                }
                                                if (x.Oran >= 71 && x.Oran <= 84)
                                                {
                                                    renk = "progress-bar bg-primary";
                                                }
                                                if (x.Oran >= 85 && x.Oran <= 100)
                                                {
                                                    renk = "progress-bar bg-success";
                                                }

                                                <tr>
                                                    <td>@x.ID</td>
                                                    <td>@x.Yetenek</td>
                                                    <td>
                                                        <div class="progress progress-xs">
                                                            <div class="@renk" style="width: @x.Oran%"></div>
                                                        </div>
                                                    </td>
                                                    <td><span class="badge @renk">@x.Oran%</span></td>
                                                    <td>
                                                        <a class="btn btn-info btn-sm" href="/Yetenek/YetenekDuzenle/@x.ID">
                                                            <i class="fas fa-pencil-alt">
                                                            </i>
                                                            Düzenle
                                                        </a>
                                                    </td>
                                                    <td>
                                                        <a class="btn btn-danger btn-sm" href="/Yetenek/YetenekSil/@x.ID">
                                                            <i class="fas fa-trash">
                                                            </i>
                                                            Sil
                                                        </a>
                                                    </td>
                                                </tr>
                                             }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</body>
</html>


