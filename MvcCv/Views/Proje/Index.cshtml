@using MvcCv.Models.Entity
@model List<TblProjelerim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<h2>Proje Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Baslik</td>
            <td>@item.Aciklama</td>
            <td>@item.Tarih</td>
            <td><a href="/Proje/ProjeSil/@item.ID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Proje/ProjeGetir/@item.ID" class="btn btn-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="/Proje/ProjeEkle/" class="btn btn-primary">Yeni Proje Ekle</a>

